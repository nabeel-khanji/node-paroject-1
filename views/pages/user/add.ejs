

 

<%- partial('../../layouts/topbar.ejs') %>
<div class="container">
    <form action="/<%= route %>_store" method="post">
        <div class="form-group">
          <label for="exampleInputEmail1">Name</label>
          <input type="text" name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Title">
        </div>
        <%- include("../../layouts/valid_msg.ejs",{name: "name"}); %>
              
        <div class="form-group">
          <label for="exampleInputPassword1">Email</label>
          <input type="text" name="emailAddress" class="form-control" id="exampleInputPassword1" placeholder="Text">
        </div>
        <%- include("../../layouts/valid_msg.ejs",{name: "emailAddress"}); %>
              
    
        <div class="form-group usersNotif">
            <label for="exampleInputPassword1">Select Country</label>
            
            <select name="country" class="form-control" aria-label="Default select example" >
                <% countries.forEach(function(country) { %>
                    <option
                            data-value="<%= country.id; %>"
                            value="<%= country.id; %>"
                    >
                        <%= country.name; %>
                    </option>
                <% }); %>
            </select>
        </div> 
        <%- include("../../layouts/valid_msg.ejs",{name: "country"}); %>
              
        
        
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

    